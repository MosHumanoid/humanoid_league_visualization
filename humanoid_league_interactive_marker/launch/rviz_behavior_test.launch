<launch>

    <arg name="sim" default="false"/>
    <arg name="minibot" default="false"/>
    <arg name="wolfgang" default="false"/>

    <include file="$(find bitbots_localization)/launch/load_map.launch" />
    <node name="tf_map_odom" pkg="bitbots_move_base" type="tf_map_odom.py"/>
    <node name="ball_marker" pkg="rviz_behavior_test" type="rviz_behavior_test.py"/>
    <include file="$(find bitbots_quintic_walk)/launch/quintic_walk_standalone.launch">
        <arg name="sim" value="$(arg sim)"/>
        <arg name="minibot" value="$(arg minibot)"/>
        <arg name="wolfgang" value="$(arg wolfgang)"/>
    </include>
</launch>